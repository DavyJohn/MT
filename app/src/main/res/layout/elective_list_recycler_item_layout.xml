<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/base_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:src="@drawable/imag_demo"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="javascipt基础"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:id="@+id/course_title"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/my_elective_recycler_item_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="1天"
                        android:layout_gravity="center"
                        android:textColor="#6c6c6c"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="40dp"
                    android:id="@+id/training_num"
                    android:src="@drawable/click_training_sel"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="42dp"
                    android:id="@+id/elective_list_details"
                    android:src="@drawable/my_elective_recycler_item_details_btn"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>