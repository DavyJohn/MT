<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/base_bg"
        android:layout_marginTop="?attr/actionBarSize">
        <com.zzh.mt.widget.MysearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:id="@+id/classmate_search"
            android:background="@drawable/searchview_shape"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/classmate_search_recycler"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/no_search_root">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/classmate_recycler"/>
            <com.zzh.mt.widget.sidebar.WaveSideBar
                android:id="@+id/classmate_side"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="8dp"
                android:cursorVisible="false"
                app:sidebar_position="right"
                app:sidebar_lazy_respond="true"
                app:sidebar_text_alignment="center"
                app:sidebar_max_offset="80dp"
                app:sidebar_text_color="#8D6E63" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>